<!DOCTYPE html>
<html>
  <head>
    <title>RecruiterApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%=button_to 'All Companies', companies_path, method: :get%>
    <%=button_to 'All Jobs', jobs_path, method: :get%>
    <%=button_to 'All Candidates', candidates_path, method: :get%>
    <%= yield %>
  </body>
</html>
